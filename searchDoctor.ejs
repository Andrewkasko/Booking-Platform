<head xmlns:padding="http://www.w3.org/1999/xhtml">
    <title> <%=title%> </title>

    <style>
        body{
            background: whitesmoke;
            margin: 0px;
            padding: 0px;
        }
        header{
            background: #bce8f1;
            padding: 30px;
        }
        section{
            background: darkseagreen;
            padding: 50px;
        }
        footer{
            background: #9e9e9e;
        }

    </style>

</head>

<body>

<a href="/dashboard">Dashboard</a> |
<a href="/searchDoctor">Search Doctor</a> |
<a href="#">Locations</a>


<header>
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>
</header>


<section>
    <div class="mx-auto" style="width: 400px;">
        <h3> <%= doctorsdata.databaseName %> </h3>

    </div>


    <div class = "row-cols-lg-1">

        <ul>
            <% doctorsdata.doctors.forEach(function(item){ %>

                <div class="card" style="width: 30rem;">
                    <div class="card-body">
                        <h5 class="card-title"> Dr. <%= item.doctorFirstName + " " + item.doctorLastName%></h5>

                        <p class="card-text">
                            <p>Contact Number: <%= item.doctorContactNumber%></p>
                            <p>Address: <%= item.doctorAddress%></p>
                        </p>

                        <a href="#" class="btn btn-primary">Get Directions to this Doctor</a>
                        <a href="#" class="btn btn-primary">Learn More About this Doctor</a>

                    </div>
                </div>

            <% }); %>
        </ul>

    </div>
</section>

<footer>Footer</footer>

</body>